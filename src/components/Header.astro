---
// Header.astro o NavHeader.astro
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import Spotify from "@/icons/Spotify.astro";

// Iconos que faltan para la derecha
import InstallIcon from "@/icons/InstallIcon.astro"; // Asumo un icono para "Instalar aplicación"
import BellIcon from "@/icons/BellIcon.astro"; // Asumo un icono para la notificación

// Podrías usar SideMenuItem, pero es mejor usar un componente genérico de botón para el Header
// Para simplificar, definiremos los botones aquí.
---

<header
  class="bg-black/80 p-2 sticky top-0 z-10 flex flex-row justify-between items-center flex-1 h-16"
>
  <div class="flex items-center gap-4">
    <a href="/" class="block">
      <Spotify class="w-8 h-8" />
    </a>
  </div>

  <div class="flex items-center gap-2">
    <a
      href="/"
      class="p-2 bg-zinc-800 hover:bg-zinc-700 rounded-full transition-colors duration-200"
    >
      <HomeIcon class="w-6 h-6 text-white" />
    </a>

    <div class="bg-zinc-800 rounded-full flex items-center p-2 min-w-[300px]">
      <SearchIcon class="w-5 h-5 text-gray-400 ml-2" />
      <input
        type="text"
        placeholder="¿Qué quieres reproducir?"
        class="bg-transparent text-white placeholder-gray-400 w-full focus:outline-none px-2"
      />
    </div>
  </div>

  <div class="flex items-center gap-4">
    <a
      href="/install"
      class="flex items-center gap-1 text-gray-300 hover:text-white font-semibold text-sm transition-colors duration-200"
    >
      <InstallIcon />
      Instalar aplicación
    </a>

    <button
      class="text-gray-300 hover:text-white transition-colors duration-200"
    >
      <BellIcon />
    </button>

    <button
      class="w-8 h-8 rounded-full bg-pink-500 text-white flex items-center justify-center font-bold"
    >
      B
    </button>
  </div>
</header>

